<!DOCTYPE html>
<html>
<head>
  <title>Simulation Results</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* General Body Styling */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #121212; /* Dark Background */
      color: #EAEAEA; /* Light text for contrast */
      margin: 0;
      padding: 0;
    }

    /* Navbar Styling */
    .navbar {
      background-color: transparent;
      padding: 20px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: #fff;
      box-shadow: none; /* Optional: Remove any shadow */
    }

    .navbar a {
      color: #EAEAEA;
      text-decoration: none;
      margin-right: 20px;
      padding: 8px 12px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .navbar a:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }

    /* Container */
    .container {
      max-width: 1200px;
      margin: 40px auto;
      padding: 0 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 40px;
      font-size: 2rem;
      color: #fff;
    }

    /* Grid layout for results */
    .results-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
      gap: 20px;
    }

    /* Styling for individual result block */
    .result-block {
      background: #1f1f1f;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
      transition: transform 0.3s ease-in-out;
    }

    .result-block:hover {
      transform: translateY(-5px);
    }

    .result-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }

    .result-header h3 {
      margin: 0;
      font-size: 1.1rem;
      color: #fff;
    }

    .delete-form button {
      background-color: #dc3545;
      border: none;
      color: white;
      padding: 6px 12px;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .delete-form button:hover {
      background-color: #c82333;
    }

    /* Paragraph Styling */
    p {
      margin: 6px 0;
      font-size: 1rem;
    }

    /* Table Styling */
    .robot-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      font-size: 0.95rem;
    }

    .robot-table th,
    .robot-table td {
      border: 1px solid #444;
      padding: 10px;
      text-align: center;
    }

    .robot-table th {
      background-color: #333;
      color: #fff;
    }

    .robot-table td {
      background-color: #2a2a2a;
    }

    .robot-table tr:nth-child(even) {
      background-color: #333;
    }

    .robot-table td,
    .robot-table th {
      color: #fff;
    }

    /* Button Styling */
    a.btn {
      display: inline-block;
      background-color: #007bff;
      color: white;
      text-decoration: none;
      padding: 10px 20px;
      border-radius: 6px;
      transition: background-color 0.3s ease;
    }

    a.btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>

  <!-- Navigation Bar -->
  <div class="navbar">
    <div><strong>Simulation Dashboard</strong></div>
    <div>
      <a href="/">‚Üê Back to Home</a>
    </div>
  </div>

  <div class="container">
    <h1>Recent Simulation Results</h1>

    <div class="results-grid">
      <% sims.forEach(sim => { %>
        <div class="result-block">
          <div class="result-header">
            <h3>Simulation ID: <%= sim._id %></h3>
            <form action="/results/<%= sim._id %>/delete" method="POST" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this simulation?');">
              <button type="submit">Delete</button>
            </form>
          </div>
          <p><strong>Created:</strong> <%= new Date(sim.createdAt).toLocaleString() %></p>
          <p><strong>Robots:</strong> <%= sim.robotData.length %></p>

          <table class="robot-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>X</th>
                <th>Y</th>
                <th>Success Rate</th>
                <th>Wants Help</th>
                <th>Got Help</th>
                <th>Bid</th>
              </tr>
            </thead>
            <tbody>
              <% sim.robotData.forEach(robot => { %>
                <tr>
                  <td><%= robot.id %></td>
                  <td><%= robot.x %></td>
                  <td><%= robot.y %></td>
                  <td><%= robot.successRate %></td>
                  <td><%= robot.wantsHelp %></td>
                  <td><%= robot.gotHelp %></td>
                  <td><%= robot.bid.toFixed(3) %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% }) %>
    </div>
  </div>

</body>
</html>
